{% extends 'head.html.twig' %} 


{% block title %}NetHub | Connexion{% endblock %}
{% block stylesheets %} 
    <link rel="stylesheet" href="{{ asset('stylesheets/connexion.css') }}" type="text/css">
{% endblock %}


{% block body %}

<div class="container">
    <div class="container-header">
        <button class="close" type="button" onclick='location.href="{{ path('accueil') }}"'></button>
        <h2>Connexion</h2>
    </div>
    
    <form action="{{ path('connect_user') }}" method="post">
        <div class="form-group">
            <label for="email">Adresse e-mail</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" id="password" name="password" required>
        </div>
        <button class="button-submit" type="submit">Se connecter</button>
    </form>
    <p> Pas inscrit ? Rejoins-nous et <a href = "{{ path('inscription') }}">cr√©e ton compte</a></p>
</div>

{% endblock %}